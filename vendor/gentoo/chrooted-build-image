set -eu

printf >&2 '%s: %s\n' "$PROG" "running emerge-webrsync ..."
emerge-webrsync --quiet

printf >&2 '%s: %s\n' "$PROG" "running emerge --sync ..."
emerge --sync

printf >&2 '%s: %s\n' "$PROG" "installation extra packages  ..."
xargs -r emerge --ask=n < /.host/packages
