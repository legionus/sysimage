FROM fedora

ARG extra=
ARG extra2=
ARG verbose=

RUN test -n "$extra" && \
dnf -y install $extra ||:

RUN test -d /.host/files && \
find /.host/files/ -mindepth 1 -maxdepth 1 -exec cp $verbose -arft / -- '{}' '+' ||:

RUN test -n "$extra2" && \
dnf -y install $extra2 ||:

